# Computer Vision Pipeline Configuration

# API Keys for image data sources
UNSPLASH_ACCESS_KEY=your_unsplash_key_here
PEXELS_API_KEY=your_pexels_key_here

# Optional: OpenAI API for LLM reranking
OPENAI_API_KEY=your_openai_key_here

# Optional: Supabase for data storage
SUPABASE_URL=https://your-supabase-url
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_STORAGE_BUCKET=your-bucket-name

# Local proxy settings for LLM reranking
LOCAL_PROXY_URL=http://127.0.0.1:8787/api/generate

# Model paths
CLIP_MODEL_PATH=models/clip_probe.joblib
YOLO_MODEL_PATH=models/yolov8n.pt
EMBEDDING_CACHE_PATH=models/embedding_cache.joblib

# Pipeline configuration
DEFAULT_DETECTION_THRESHOLD=0.5
DEFAULT_COMPLIANCE_WEIGHT=1.0
DEFAULT_LLM_WEIGHT=0.6
DEFAULT_CONFLICT_PENALTY=0.25
DEFAULT_NO_GLASS_PENALTY=0.5

# Training configuration
TRAIN_BATCH_SIZE=32
TRAIN_EPOCHS=100
TRAIN_LEARNING_RATE=0.001
CROSS_VALIDATION_FOLDS=5